  font-family: 'Montserrat', sans-serif;
  color: pink;
  font-weight: lighter;
  font-size: 25px;
}
a {
  color: white;
  background-color:#d2111b;
  padding:8px;
}
a:hover {
  text-decoration: none;
  color: red;
}
<% end %>
      </section>
